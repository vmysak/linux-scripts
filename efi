yum install grub2-efi-x64-modules.noarch
su - root
mount /dev/sdc2 /mnt
mount /dev/sdc1 /mnt/boot/efi
for i in /dev /dev/pts /proc /sys /run; do
sudo mount -B $i /mnt$i; done
sudo chroot /mnt
